{
  "name": "myui5app",
  "version": "0.0.1",
  "scripts": {
    "start": "ui5 serve --config=uimodule/ui5.yaml  --open index.html",
    "build:ui": "run-s build:uimodule",
    "test": "run-s lint karma",
    "karma-ci": "karma start karma-ci.conf.js",
    "clearCoverage": "shx rm -rf coverage",
    "karma": "run-s clearCoverage karma-ci",
    "lint": "eslint ./**/webapp/**/*.js && prettier --plugin=@prettier/plugin-xml --check ./**/webapp/**/*.{js,xml} --no-error-on-unmatched-pattern",
    "lint-fix": "eslint ./**/webapp/**/*.js --fix && prettier --plugin=@prettier/plugin-xml --write ./**/webapp/**/*.{js,xml} --no-error-on-unmatched-pattern",
    "build:mta": "mbt build",
    "deploy:cf": "cross-var cf deploy mta_archives/myui5app_$npm_package_version.mtar",
    "deploy": "run-s build:mta deploy:cf",
    "build:uimodule": "ui5 build --config=uimodule/ui5.yaml --clean-dest --dest approuter/uimodule/webapp"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "3.4.1",
    "@ui5/cli": "^3",
    "cross-var": "^1.1.0",
    "eslint": "9.5.0",
    "karma": "^6.4.2",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.0",
    "karma-ui5": "3.0.4",
    "mbt": "1.2.28",
    "npm-run-all": "^4.1.5",
    "prettier": "3.3.2",
    "shx": "^0.3.4",
    "ui5-middleware-cfdestination": "^0.2.3",
    "ui5-middleware-livereload": "3.0.3",
    "ui5-task-zipper": "3.1.4"
  }
}
